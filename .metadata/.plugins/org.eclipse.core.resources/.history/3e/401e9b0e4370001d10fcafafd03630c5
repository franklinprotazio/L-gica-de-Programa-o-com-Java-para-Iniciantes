package exercicio09;

public class Exercicio09 {

	public static void main(String[] args) {
		Produto produto = new Produto();
		produto.nome = "Camisa";
		produto.quantidadeEstoque = 10;

		validarQuantidadeMinima(produto.quantidadeEstoque);
	}

	static Boolean validarQuantidadeMinima(Integer quantidadeMinima) {
		Boolean valida = quantidadeMinima < 10;

		if (valida) {
			imprimir("Eh necessario a reposicao");
		} else {
			imprimir("Nao eh necessario a reposicao");
		}
		return valida;
	}
	
	static void imprimir(String texto) {
		System.out.println(texto);
	}

}
