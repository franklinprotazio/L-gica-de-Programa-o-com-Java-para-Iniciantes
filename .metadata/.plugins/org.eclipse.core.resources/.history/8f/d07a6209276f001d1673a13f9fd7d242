	static void imprimirTabuada(Scanner scanner, Integer numero) {
		multiplicando(scanner);
		multiplicador(numero);

	}

	static void multiplicador(Integer numero) {

		for (int i = 0; i <= 10; i++) {
			System.out.println(numero + " x " + i + " = " + numero * i);
		}

	}

