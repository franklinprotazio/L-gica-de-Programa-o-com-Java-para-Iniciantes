	static void  imprimirTabuada(Scanner scanner, Integer numero) {
		multiplicando(scanner, numero);
		multiplicador(scanner, numero);
			
	}
	
	static void multiplicador (Scanner scanner, Integer numero) {
		
		for (int i = 0; i <= 10; i++) {
			System.out.println(numero + " x " + i + " = " + numero * i);
		}
		
	}
	
	
